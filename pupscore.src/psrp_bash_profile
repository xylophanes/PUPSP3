# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

#------------------------------------------------
# User specific environment and startup programs
# Make sure that local directory and home bin
# directory are checked for commands first
#------------------------------------------------

PATH=".":$HOME/bin:$PATH

export PATH
